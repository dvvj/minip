/**app.wxss**/
.imgbox_container {
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.imgbox {
  width: 330rpx;
  height: 410rpx;
  display: inline-block;
  padding: 10rpx 20rpx;
  margin: 5rpx 0;
  background-color: #f0f1ca;
}

.product_desc{
  font-size: 24rpx;
  height: 90rpx;
  text-align: center;
}

.product_img {
  width: 330rpx;
  height: 330rpx;
  border: 1px solid rgb(250, 250, 250);
}