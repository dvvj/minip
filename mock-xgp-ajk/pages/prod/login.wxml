<!--pages/mock/login.wxml-->
<waiting-toast id="waitingToast" />

<view>
  <view>
    <image src="../../images/product11.png" style="width:100%; height:600rpx;" mode="aspectFill"></image>
  </view>
  <van-cell-group>
    <van-field
      value="{{ userid }}"
      required
      clearable
      label="用户ID"
      icon="question-o"
      placeholder="请输入用户ID"
      bind:click-icon="onClickIcon"
      bind:input="onInputUserId"
    />

    <van-field
      value="{{ password }}"
      type="password"
      label="密码"
      placeholder="请输入密码"
      required
      border="{{ true }}"
      bind:input="onInputPassword"
    />

    <van-button type="primary" size="large" bind:click="onLogin">登录</van-button>
    <!-- <van-button type="primary" size="large" bind:click="onLogin"
      loading="{{ loadingText != '' }}"
      loading-text='{{ loadingText}}'>登录</van-button> -->
  </van-cell-group>
</view>
