<!--pages/mock/login.wxml-->
<waiting-toast id="waitingToast" />


<view>
  <image src="../../images/product1.png" style="width:100%; height:600rpx;" mode="aspectFill"></image>
</view>
<van-cell-group>
  <van-field
    value="{{ userid }}"
    required
    clearable
    label="用户ID"
    icon="question-o"
    placeholder="请输入用户ID"
    bind:click-icon="onClickIcon"
    bind:input="onInputUserId"
  />

  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ true }}"
    bind:input="onInputPassword"
  />
</van-cell-group>
<van-cell-group>
  <van-cell>
    <view slot="title">
      <van-button type="primary" size="large" type="info" class="large-button" bind:click="onLogin">
        登 录
      </van-button>
    </view>
  </van-cell>
</van-cell-group>