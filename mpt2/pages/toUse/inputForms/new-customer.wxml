<!--pages/toUse/inputForms/new-customer.wxml-->
<van-cell-group>
  <van-field
    value="{{ userid }}"
    required
    clearable
    label="用户ID"
    icon="question-o"
    placeholder="请输入用户ID"
    bind:click-icon="onClickIcon"
    bind:input="onInputUserId"
  />

  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ true }}"
    bind:input="onInputPassword"
  />

  <van-field
    value="{{ password2 }}"
    type="password"
    label="重复密码"
    placeholder="请再次输入密码"
    required
    border="{{ true }}"
    bind:input="onInputPassword2"
  />

  <van-field
    value="{{ userName }}"
    required
    clearable
    label="姓名"
    icon="question-o"
    placeholder="请输入姓名，必须与身份证一致"
    bind:click-icon="onClickIcon"
    bind:input="onInputUserName"
  />

  <van-field
    value="{{ idCardNo }}"
    required
    clearable
    label="身份证号"
    icon="question-o"
    placeholder="姓名必须与身份证一致"
    bind:click-icon="onClickIcon"
    bind:input="onInputIdCardNo"
  />

  <van-field
    value="{{ mobile }}"
    required
    clearable
    label="手机号"
    icon="question-o"
    placeholder="手机号"
    bind:click-icon="onClickIcon"
    bind:input="onInputMobile"
  />

  <van-field
    value="{{ postAddr }}"
    required
    clearable
    label="邮寄地址"
    icon="question-o"
    placeholder="有效的收货地址"
    bind:click-icon="onClickIcon"
    bind:input="onInputPostAddr"
  />
  <!-- <van-area area-list="{{ areaList }}" title="标题" /> -->

  <van-button type="primary" size="large" bind:click="onNewCustomer">添加</van-button>
</van-cell-group>
