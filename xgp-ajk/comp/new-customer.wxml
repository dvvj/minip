<!--comp/new-customer.wxml-->
<van-cell-group>
  <van-field
    disabled="{{ newCustomer.disabled }}"
    value="{{ newCustomer.userid }}"
    required
    clearable
    label="用户ID"
    icon="question-o"
    placeholder="请输入用户ID"
    bind:click-icon="onClickIcon"
    bind:input="onInputUserId"
  />

  <van-field
    disabled="{{ newCustomer.disabled }}"
    value="{{ newCustomer.password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ true }}"
    bind:input="onInputPassword"
  />

  <van-field
    disabled="{{ newCustomer.disabled }}"
    value="{{ newCustomer.password2 }}"
    type="password"
    label="重复密码"
    placeholder="请再次输入密码"
    required
    border="{{ true }}"
    bind:input="onInputPassword2"
  />

  <van-field
    disabled="{{ newCustomer.disabled }}"
    value="{{ newCustomer.userName }}"
    required
    clearable
    label="姓名"
    icon="question-o"
    placeholder="请输入姓名，必须与身份证一致"
    bind:click-icon="onClickIcon"
    bind:input="onInputUserName"
  />

  <van-field
    disabled="{{ newCustomer.disabled }}"
    value="{{ newCustomer.idCardNo }}"
    required
    clearable
    label="身份证号"
    icon="question-o"
    placeholder="姓名必须与身份证一致"
    bind:click-icon="onClickIcon"
    bind:input="onInputIdCardNo"
  />

  <van-field
    disabled="{{ newCustomer.disabled }}"
    value="{{ newCustomer.mobile }}"
    required
    clearable
    label="手机号"
    icon="question-o"
    placeholder="手机号"
    bind:click-icon="onClickIcon"
    bind:input="onInputMobile"
  />

  <van-field
    disabled="{{ newCustomer.disabled }}"
    value="{{ newCustomer.postAddr }}"
    required
    clearable
    label="邮寄地址"
    icon="question-o"
    placeholder="有效的收货地址"
    bind:click-icon="onClickIcon"
    bind:input="onInputPostAddr"
  />

  <van-button type="primary" size="large" bind:click="onNewCustomer"
    loading="{{ newCustomer.loadingText != '' }}"
    loading-text='{{ newCustomer.loadingText}}'>添加</van-button>
</van-cell-group>
