<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>

      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
        <button class='shortbutton' bindtap='onMinus'>-</button>
  <slider class='shortslider' bindchange='sliderChange' min="{{min}}" max="{{max}}" value='{{sliderValue}}' show-value />
        <button class='shortbutton' bindtap='onAdd'>+</button>
  <switch wx:for="{{objectArray}}" wx:key="unique" > {{item.id}} </switch>
  <button bindtap="doSwitch"> Switch </button>
</view>
