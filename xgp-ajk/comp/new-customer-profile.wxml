<!--comp/new-customer-profile.wxml-->
<van-tabs active="{{ activeTabIndex }}" bind:change="onChangeTab">
  <van-tab title="新用户信息">
    <van-cell-group>
      <van-field
        disabled="{{ newCustomer.disabled }}"
        value="{{ newCustomer.userid }}"
        required
        clearable
        label="用户ID"
        icon="question-o"
        placeholder="请输入用户ID"
        bind:click-icon="onClickIcon"
        bind:input="onInputUserId"
      />

      <van-field
        disabled="{{ newCustomer.disabled }}"
        value="{{ newCustomer.password }}"
        type="password"
        label="密码"
        placeholder="请输入密码"
        required
        border="{{ true }}"
        bind:input="onInputPassword"
      />

      <van-field
        disabled="{{ newCustomer.disabled }}"
        value="{{ newCustomer.password2 }}"
        type="password"
        label="重复密码"
        placeholder="请再次输入密码"
        required
        border="{{ true }}"
        bind:input="onInputPassword2"
      />

      <van-field
        disabled="{{ newCustomer.disabled }}"
        value="{{ newCustomer.userName }}"
        required
        clearable
        label="姓名"
        icon="question-o"
        placeholder="请输入姓名，必须与身份证一致"
        bind:click-icon="onClickIcon"
        bind:input="onInputUserName"
      />

      <van-field
        disabled="{{ newCustomer.disabled }}"
        value="{{ newCustomer.idCardNo }}"
        required
        clearable
        label="身份证号"
        icon="question-o"
        placeholder="姓名必须与身份证一致"
        bind:click-icon="onClickIcon"
        bind:input="onInputIdCardNo"
      />

      <van-field
        disabled="{{ newCustomer.disabled }}"
        value="{{ newCustomer.mobile }}"
        required
        clearable
        label="手机号"
        icon="question-o"
        placeholder="手机号"
        bind:click-icon="onClickIcon"
        bind:input="onInputMobile"
      />

      <van-field
        disabled="{{ newCustomer.disabled }}"
        value="{{ newCustomer.postAddr }}"
        required
        clearable
        label="邮寄地址"
        icon="question-o"
        placeholder="有效的收货地址"
        bind:click-icon="onClickIcon"
        bind:input="onInputPostAddr"
      />

      <van-button type="primary" size="large" bind:click="onNewCustomer"
        loading="{{ newCustomer.loadingText != '' }}"
        loading-text='{{ newCustomer.loadingText}}'>添加</van-button>
    </van-cell-group>
  </van-tab>
  <van-tab title="用户档案">
    <van-cell-group>
      <van-cell
        title="todo: 用户信息：id，姓名，身份证号"
        value-class="value-class"
      />

      <van-field
        value="{{ profile.healthTags }}"
        required
        clearable
        label="身体状况"
        icon="question-o"
        placeholder="请填写当前患有疾病，逗号分隔"
        bind:click-icon="onClickIcon"
        bind:input="onInputHealthTags"
      />
      <van-field
        value="{{ profile.medicineTags }}"
        required
        clearable
        label="服用药物"
        icon="question-o"
        placeholder="请填写当前服用药物，逗号分隔"
        bind:click-icon="onClickIcon"
        bind:input="onInputMedicineTags"
      />

      <!-- <van-checkbox-group value="{{ selected }}" bind:change="onChange">
        <van-cell
          wx:for="{{ products }}"
          wx:key="id"
          value-class="value-class"
          clickable
          data-index="{{ index }}"
          bind:click="toggle"
        >
          <van-checkbox catch:tap="noop" class="checkboxes-{{ index }}">"药品 {{ item.name }}"</van-checkbox>
        </van-cell>
      </van-checkbox-group> -->

      <van-cell
        title="选择推荐保健品："
      />

      <van-checkbox-group value="{{ selected }}" data-key="selected" custom-class="checkbox-group" bind:change="onChange">
        <van-checkbox
          wx:for="{{ products }}"
          wx:key="id"
          name="{{ item.name }}"
          custom-class="checkbox"
        >
          复选框 {{ item.name }}
        </van-checkbox>
      </van-checkbox-group>

      <van-button type="primary" size="large" bind:click="onNewCustomerProfile">添加用户档案</van-button>

    </van-cell-group>
  </van-tab>
</van-tabs>
